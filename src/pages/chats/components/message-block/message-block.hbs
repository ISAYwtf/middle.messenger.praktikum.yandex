<div class="message-block">
    <div class="message-block__date">{{date}}</div>
    {{#each blocks}}
        <div class="message-block__item {{#if opposite}}message-block__item_opposite{{else}}message-block__item_own{{/if}}">
            {{#each items}}
                {{> Message }}
            {{/each}}
        </div>
    {{/each}}
</div>
