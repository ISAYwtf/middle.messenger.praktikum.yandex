<main class="login-container">
    {{#> FormAuth
            title="Регистрация"
            primaryActionLabel="Зарегистрироваться"
            secondaryActionLabel="Войти"
            secondaryActionLink="login"
    }}
        {{> Input label="Почта" name="email" }}
        {{> Input label="Логин" name="login" }}
        {{> Input label="Иван" name="first_name" }}
        {{> Input label="Фамилия" name="second_name" }}
        {{> Input label="Телефон" name="phone" }}
        {{> Input label="Пароль" name="password" type="password" }}
        {{> Input label="Пароль (ещё раз)" name="password" type="password" }}
    {{/FormAuth}}
</main>

