{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "preview": "vite preview --port 3000",
    "start": "npm run build && npm run preview",
    "prepare": "husky install",
    "lint:css": "npx stylelint **/*.css",
    "lint:code": "tsc && eslint src",
    "lint": "npm run lint:code && npm run lint:css",
    "lint:fix": "npm run lint:code -- --fix && npm run lint:css -- --fix",
    "test": "mocha"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "chai": "^5.1.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jsdom": "^24.0.0",
    "mocha": "^10.3.0",
    "sinon": "^17.0.1",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=18.14.0"
  },
  "dependencies": {
    "nanoid": "^5.0.4",
    "vite-plugin-handlebars": "^1.6.0"
  }
}
